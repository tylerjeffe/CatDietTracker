<h1>Cat Diet Tracker</h1>

<h2>single-cat-view.handlebars:</h2>
<ul>
  {{#each cats}}
    {{> cats/cat-block}}
  {{/each}}
</ul>

{{#each cats}}
<table>
    <thead>
        <tr>
            <th colspan="3">Weekly 'single-cat' Log:</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Cat Name: {{this.cat_name}}</td>
            <td>Room #: {{this.cat_location_room}} - Kennel #: {{this.cat_location_kennel}}</td>
        </tr>
        <tr>
            <td>Sunday:</td>
            <td>Meals: <button>Add Meal Item</button>

            </td>
        </tr>

    </tbody>
</table>
{{/each}}
